@model NoteApp.Models.Note

@{
    ViewData["Title"] = "Notu Sil";
}

<div class="container py-4">
    <h1>Notu Sil</h1>

    <div class="alert alert-danger">
        <h4>Bu notu silmek istediğinizden emin misiniz?</h4>
        <p>Bu işlem geri alınamaz.</p>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">@Model.Title</h5>
        </div>
        <div class="card-body">
            <p class="text-muted small mb-2">
                Oluşturulma: @Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")
            </p>
            <p class="mb-0">@Model.Content</p>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">İptal</a>
            <button type="submit" class="btn btn-danger">Sil</button>
        </div>
    </form>
</div>